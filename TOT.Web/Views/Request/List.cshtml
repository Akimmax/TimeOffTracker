@using TOT.Dto.TimeOffRequests
@using TOT.Web.ViewModels;
@model TOT.Dto.Identity.Models.RequestShowModel

@{
    ViewData["Title"] = "List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Users</title>
</head>
<body>
    <div class="row text-center">
        <h4>
            <strong>
                Requests
            </strong>
        </h4>
    </div>

    <div class="row">
        <div class="panel-group">
            <div class="panel panel-primary">
                <div class="panel-heading" onclick="$('#collapse1').collapse('toggle')">
                    <h4 class="panel-title text-center">
                        <a data-toggle="collapse" href="#collapse1">Filtration form</a>
                    </h4>
                </div>
                <div id="collapse1" class="panel-collapse collapse">

                    <form method="get" class="form-horizontal">
                        <div class="panel-body">

                            <div class="form-group">
                                <label class="col-md-offset-3 col-sm-2 col-md-1  control-label">From</label>
                                <div class="col-sm-10 col-md-4">
                                    @Html.TextBox("startsat", Model.RequestFilter.StartsAt, htmlAttributes: new { @class = "form-control", @type = "Date" })
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-md-offset-3 col-sm-2 col-md-1  control-label">To</label>
                                <div class="col-sm-10 col-md-4">
                                    @Html.TextBox("endson", Model.RequestFilter.EndsOn, htmlAttributes: new { @class = "form-control", @type = "Date" })
                                </div>
                            </div>

                            <div class="form-group">
                                <label asp-for="RequestFilter.Note" class="col-md-offset-3 col-sm-2 col-md-1  control-label"></label>
                                <div class="col-sm-10 col-md-4">
                                    @Html.TextBox("note", Model.RequestFilter.Note, htmlAttributes: new { @class = "form-control" })
                                </div>
                            </div>

                            <div class="form-group">
                                <label asp-for="RequestFilter.TypeId" class="col-md-offset-3 col-sm-2 col-md-1  control-label"></label>
                                <div class="col-sm-10 col-md-4">
                                    @Html.DropDownList("typeid", ((IEnumerable<SelectListItem>)ViewData["AvailableTypes"]), "All Types",
                                    htmlAttributes: new { @class = "form-control" })
                                </div>
                            </div>

                            <div class="form-group">
                                <label asp-for="RequestFilter.RequestStatuses" class="col-md-offset-3 col-sm-2 col-md-1  control-label"></label>
                                <div class="col-sm-10 col-md-4">
                                    @Html.DropDownList("requeststatuses", ((IEnumerable<SelectListItem>)ViewData["AvailableStatuses"]), "All Statuses",
                                    htmlAttributes: new { @class = "form-control" })
                                </div>
                            </div>

                        </div>
                        <div class="panel-footer">
                            <div class="form-group text-center">
                                <input type="submit" value="Filter" class="btn btn-primary" />
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    @if (ViewBag.OnlyShow != true)
    {
        <p>
            <a asp-action="Create">Create New</a>
        </p>
    }
    @if (Model.Requests.Any())
    {
        <div class="row table-responsive">
            <table class="table table-bordered table-hover" style="table-layout: fixed;">
                <thead>
                    <tr>
                        <td class="col-md-2">
                            <b>Type</b>
                        </td>
                        <td class="col-md-2">
                            <b>Day(s) Off</b>
                        </td>
                        <td class="col-md-6">
                            <b>Notes</b>
                        </td>
                        <th>
                            <b>Actions</b>
                        </th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var item in Model.Requests)
                    {
                        <tr class="@(item.Approvals.Any(a=>a.Status.Id==(int)ApprovalStatuses.Denied) ? "alert-danger":item.Approvals.All(a=>a.Status.Id==(int)ApprovalStatuses.Accepted) ? "alert-success":"alert-info")">
                            <td style="vertical-align:middle">
                                @item.Type.Title
                            </td>
                            <td style="overflow:hidden; vertical-align:middle">
                                @item.StartsAt.ToString("MM/dd/yyyy") - @item.EndsOn?.ToString("MM/dd/yyyy")
                            </td>
                            <td style="overflow:hidden; vertical-align:middle">
                                @item.Note
                            </td>
                            <td style="vertical-align:middle">
                                @if (ViewBag.OnlyShow == true)
                                {

                                    <button type="button" class="btn btn-info btn-sm"
                                            onclick="location.href='@Url.Action("Details", "Request")?id='+@item.Id">
                                        Details
                                    </button>
                                }
                                else
                                {
                                    <input type="button" class="btn btn-warning btn-block" onclick="location.href='@Url.Action("EditGetRequest", "Request", new {id=item.Id})'" value="Edit">
                                    <input type="button" class="btn btn-info btn-block" onclick="location.href='@Url.Action("Details", "Request", new {id=item.Id})'" value="Details">
                                    <input type="button" class="btn btn-danger btn-block" href="#" data-toggle="modal" data-target="#deleteModal" data-arg-id="@item.Id" value="Delete">

                                }
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    }

    else
    {
        <center>No items found</center>
    }
</body>
</html>
@Html.Partial("_Dialog", new DialogViewModel("deleteModal")
{
Content = "Are you sure that you want to delete this request?",
SubmitAction = "Delete",
SubmitController = "Request"
})


