@model TOT.Dto.TimeOffRequests.TimeOffRequestDTO

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="panel panel-primary">
    <div class="panel-heading">
        <div class="row">
            <div class="text-center">
                <div class="col-md-offset-4 col-md-3">
                    <h2>Edit request</h2>
                </div>
            </div>
        </div>
    </div>
    <div class="panel-body">
        <div class="row">
            <div class="col-md-6 col-md-offset-3">
                <form asp-action="EditOnlyName">

                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <input asp-for="Id" type="hidden" />
                    <input asp-for="StartsAt" type="hidden" />
                    <input asp-for="EndsOn" type="hidden" />
                    <input asp-for="ApproversId" type="hidden" />

                    <div class="form-group col-md-12">
                        <label asp-for="Note" class="control-label"></label>
                        <textarea asp-for="Note" class="form-control" rows="4" cols="50" maxlength="70" style="resize: none"></textarea>
                        <span asp-validation-for="Note" class="text-danger"></span>
                    </div>

                    <div class="form-group col-md-12">
                        <div class="text-center">
                            <input type="submit" value="Save" class="btn btn-primary btn-lg" />
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-offset-4 col-md-4">
        <div class="text-center">
            <input type="button" class="btn btn-danger" onclick="location.href='@Url.Action("List", "Request")'" value="Back to List">
        </div>
    </div>
</div>
