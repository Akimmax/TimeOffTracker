@model TOT.Dto.TimeOffRequests.TimeOffRequestDTO

@{

    var users = ((IEnumerable<SelectListItem>)ViewData["Users"]);

    int? amountApprovals = (int?)ViewData["AmountRequestApprovalsForRequest"];
}

@if (users != null && users.Any())
{
    <div class="row">
        <div class="col-md-6">
            <label class="control-label">Approvals</label>

            @for (int i = 0; i < amountApprovals; i++)
            {
                <div class="form-group">
                    @Html.DropDownListFor(model => model.ApproversId, @users,
                    new { @class = "form-control" })
                </div>
            }

        </div>
    </div>
}
else
{
    <center>@ViewData["Eror message"]</center>
}