@model TOT.Dto.Identity.UserUpdateDTO
@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="panel panel-primary">
    <div class="panel-heading">
        <h2 class="text-center">Update</h2>
    </div>
    <div class="panel-body">
        <form method="post" asp-controller="Account" asp-action="Update" class="form-horizontal">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="col-md-offset-3 col-sm-2 col-md-1 control-label"></label>
                <div class="col-sm-10 col-md-4">
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Surname" class="col-md-offset-3 col-sm-2 col-md-1 control-label"></label>
                <div class="col-sm-10 col-md-4">
                    <input asp-for="Surname" class="form-control" />
                    <span asp-validation-for="Surname" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Patronymic" class="col-md-offset-3 col-sm-2 col-md-1 control-label"></label>
                <div class="col-sm-10 col-md-4">
                    <input asp-for="Patronymic" class="form-control" />
                    <span asp-validation-for="Patronymic" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="col-md-offset-3 col-sm-2 col-md-1 control-label"></label>
                <div class="col-sm-10 col-md-4">
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Position" class="col-md-offset-3 col-sm-2 col-md-1 control-label"></label>
                <div class="col-sm-10 col-md-4">
                    <select asp-for="Position.Id" class="form-control" asp-items="ViewBag.Position"></select>
                    <span asp-validation-for="Position" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label for="dtp_hiredate" asp-for="HireDate" class="col-md-offset-3 col-sm-2 col-md-1  control-label"></label>
                <div class="col-sm-10 col-md-4">
                    <div class="input-group date form_date" data-date="" data-date-format="dd MM yyyy"
                         data-link-field="dtp_hiredate" data-link-format="yyyy-mm-dd"
                         id="hiredate_datepiker">
                        <input asp-for="HireDate" type="text" class="form-control" placeholder="dd MM yyyy" readonly />
                        <span class="input-group-addon"><span class="glyphicon glyphicon-remove"></span></span>
                        <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span></span>
                    </div>
                    <input asp-for="HireDate" type="hidden" id="dtp_hiredate" />
                    <span asp-validation-for="HireDate" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Fired" class="col-md-offset-3 col-sm-2 col-md-1 control-label"></label>
                <div class="col-sm-10 col-md-4">
                    <input asp-for="Fired" class="form-control" type="hidden" />
                    <label class="control-label" id="FiredShow" onclick="FiredWorkingSwitch()">@(Model.Fired ? "Fired" : "Working")</label>
                    <span asp-validation-for="Fired" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Roles" class="col-md-offset-3 col-sm-2 col-md-1 control-label"></label>
                <div class="col-sm-10 col-md-4">
                    <select asp-for="Roles" multiple="multiple" size="@(((IEnumerable<dynamic>)ViewBag.Roles).Count())" class="form-control" asp-items="ViewBag.Roles"></select>
                    <span asp-validation-for="Roles" class="text-danger"></span>
                </div>
            </div>
            <div class="panel-footer">
                <div class="form-group">
                    <div class="text-center">
                        <input type="submit" value="Save" class="btn btn-default btn-primary btn-lg" /><br />
                        @if (ViewBag.Error != null && ViewBag.Error != "")
                        {
                            <div class="alert alert-danger" role="alert">
                                <h5>@(ViewBag.Error)</h5>
                            </div>
                        }
                    </div>
                </div>
            </div>
    </div>
</div>
    </form>

<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap-datetimepicker.js" type="text/javascript" charset="UTF-8"></script>
<script type="text/javascript">
    $('.form_date').datetimepicker({
        weekStart: 1,
        todayBtn: 1,
        autoclose: 1,
        todayHighlight: 1,
        startView: 2,
        minView: 2,
        forceParse: 0
    });
</script>