@using TOT.Dto.TimeOffPolicies.Models;
@model PolicyFilterModel

<div class="row">
    <div class="panel-group">
        <div class="panel panel-primary">
            <div class="panel-heading" onclick="$('#collapse1').collapse('toggle')">
                <h4 class="panel-title text-center">
                    Filtration form
                </h4>
            </div>
            <div id="collapse1" class="panel-collapse collapse">
                <form method="get" class="form-horizontal">
                    <div class="panel-body">
                        <div class="form-group">
                            <label asp-for="Position" class="col-md-offset-3 col-sm-2 col-md-1 control-label"></label>
                            <div class="col-sm-10 col-md-4">
                                <select asp-for="Position.Id" class="form-control" asp-items="ViewBag.Position">
                                    <option selected="selected" value="">All positions</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="Type" class="col-md-offset-3 col-sm-2 col-md-1 control-label"></label>
                            <div class="col-sm-10 col-md-4">
                                <select asp-for="Type.Id" class="form-control" asp-items="ViewBag.Type">
                                    <option selected="selected" value="">All types</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="text-center">
                                <label asp-for="Name" class="col-md-offset-3 col-sm-2 col-md-1 control-label"></label>
                            </div>
                            <div class="col-sm-10 col-md-4">
                                <input asp-for="Name" class="form-control" />
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="text-center">
                                <label asp-for="TimeOffDaysPerYear" class="col-md-offset-3 col-sm-2 col-md-1 control-label"></label>
                            </div>
                            <div class="col-sm-10 col-md-4">
                                <input asp-for="TimeOffDaysPerYear" class="form-control" />
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="text-center">
                                <label asp-for="DelayBeforeAvailable" class="col-md-offset-3 col-sm-2 col-md-1 control-label"></label>
                            </div>
                            <div class="col-sm-10 col-md-4">
                                <input asp-for="DelayBeforeAvailable" max="12" class="form-control" />
                                <input asp-for="SearchByDelay" class="form-control" />
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="text-center">
                                <label asp-for="ApproverPositions" class="col-md-offset-3 col-sm-2 col-md-1 control-label"></label>
                            </div>
                            <div class="col-sm-10 col-md-4">
                                <select asp-for="ApproverPositions.Id" class="form-control" asp-items="ViewBag.Position">
                                    <option selected="selected" value="">Any approver</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="text-center">
                                <label asp-for="IsActive" class="col-md-offset-3 col-sm-2 col-md-1 control-label"></label>
                            </div>
                            <div class="col-sm-10 col-md-4">
                                <select asp-for="IsActive" class="form-control" asp-items="ViewBag.ActiveState">
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="panel-footer">
                        <div class="form-group text-center">
                            <input type="submit" value="Filter" class="btn btn-primary" />
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>