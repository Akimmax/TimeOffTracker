@model TOT.Dto.TimeOffPolicies.EmployeePositionTimeOffPolicyDTO

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Details</title>
</head>
<body>

    <div>
        <h4>EmployeePositionTimeOffPolicy</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Type)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Type.Title)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Policy.Name)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Policy.Name)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Policy.DelayBeforeAvailable)
            </dt>
            <dd>
                @( Model.Policy.DelayBeforeAvailable == null ? "Without Probation" : $"{Model.Policy.DelayBeforeAvailable} month")
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Policy.TimeOffDaysPerYear)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Policy.TimeOffDaysPerYear)
            </dd>
            <dt>
                @Html.DisplayNameFor(model=>model.IsActive)
            </dt>
            <dd>
                @(Model.IsActive ? "Active" : "In Archive")
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Approvers)
            </dt>
                 <dd>
                     <table class="table">
                         <tr>
                             <th>Employee Position</th>
                             <th>People should approve</th>
                         </tr>
                         @foreach (var item in Model.Approvers)
                         {
                             <tr>
                                 <td>
                                     @Html.DisplayFor(modelItem => item.EmployeePosition.Title)
                                 </td>
                                 <td>
                                     @Html.DisplayFor(modelItem => item.Amount)
                                 </td>
                             </tr>
                         }
                     </table>
                 </dd>
        </dl>
    </div>
    <div>
        @if (User.IsInRole("Admin"))
        {
            <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
        }
        <a asp-action="Index">Back to List</a>
    </div>
</body>
</html>
